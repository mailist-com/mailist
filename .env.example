# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/mailist
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=Postgres123[];;

# Email Configuration (Gmail - Development)
# IMPORTANT: Use App Password, not your regular Gmail password
# How to generate Gmail App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification if not already enabled
# 3. Go to App passwords: https://myaccount.google.com/apppasswords
# 4. Generate a new app password for "Mail"
# 5. Copy the 16-character password and paste below

MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password
MAIL_FROM_ADDRESS=noreply@mailist.com
MAIL_FROM_NAME=Mailist

# Email Configuration (OVH - Production)
# For production, update these values with your OVH email settings:
# MAIL_HOST=ssl0.ovh.net
# MAIL_PORT=587
# MAIL_USERNAME=your-email@yourdomain.com
# MAIL_PASSWORD=your-ovh-password
# MAIL_FROM_ADDRESS=noreply@yourdomain.com
# MAIL_FROM_NAME=Your Company Name

# Email Gateway Type
EMAIL_GATEWAY_TYPE=smtp  # smtp or emaillabs

# EmailLabs Configuration (Disabled - using AWS SES)
# EMAILLABS_API_KEY=your-api-key
# EMAILLABS_SECRET=your-secret

# AWS SES Configuration (Primary email provider for marketing emails)
AWS_SES_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_SES_CONFIGURATION_SET=optional-configuration-set-name

# CORS Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_ALT=http://localhost:5173

# JWT Configuration (add if needed)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRATION=86400000
