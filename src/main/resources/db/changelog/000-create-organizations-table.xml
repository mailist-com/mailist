<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="000-create-organizations-table" author="system">
        <createTable tableName="organizations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subdomain" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="owner_email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="plan" type="VARCHAR(50)" defaultValue="FREE">
                <constraints nullable="false"/>
            </column>
            <column name="contact_limit" type="INTEGER" defaultValueNumeric="1000">
                <constraints nullable="false"/>
            </column>
            <column name="campaign_limit" type="INTEGER" defaultValueNumeric="10">
                <constraints nullable="false"/>
            </column>
            <column name="automation_limit" type="INTEGER" defaultValueNumeric="5">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="settings" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createIndex tableName="organizations" indexName="idx_organizations_subdomain">
            <column name="subdomain"/>
        </createIndex>
        
        <createIndex tableName="organizations" indexName="idx_organizations_owner_email">
            <column name="owner_email"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>