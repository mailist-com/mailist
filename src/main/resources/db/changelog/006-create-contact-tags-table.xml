<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-contact-tags-table" author="marketing-automation">
        <createTable tableName="contact_tags">
            <column name="contact_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="tag_color" type="VARCHAR(20)"/>
            <column name="tag_description" type="VARCHAR(500)"/>
        </createTable>
        
        <addPrimaryKey tableName="contact_tags" columnNames="contact_id,tag_name"/>
        
        <addForeignKeyConstraint
            baseTableName="contact_tags"
            baseColumnNames="contact_id"
            constraintName="fk_contact_tags_contact_id"
            referencedTableName="contacts"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
            
        <rollback>
            <dropTable tableName="contact_tags"/>
        </rollback>
    </changeSet>

</databaseChangeLog>