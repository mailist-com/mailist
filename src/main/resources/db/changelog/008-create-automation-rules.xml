<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-automation-rules" author="marketing-automation">
        <comment>Create automation_rules and related tables</comment>

        <createTable tableName="automation_rules">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="trigger_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="trigger_config" type="TEXT"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add foreign key for tenant -->
        <addForeignKeyConstraint
            baseTableName="automation_rules"
            baseColumnNames="tenant_id"
            referencedTableName="organizations"
            referencedColumnNames="id"
            constraintName="fk_automation_rules_tenant"
            onDelete="CASCADE"/>

        <!-- Create automation_conditions table -->
        <createTable tableName="automation_conditions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="field_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="operator" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(500)"/>
            <column name="condition_order" type="INTEGER" defaultValueNumeric="0"/>
        </createTable>

        <!-- Add foreign key -->
        <addForeignKeyConstraint
            baseTableName="automation_conditions"
            baseColumnNames="rule_id"
            referencedTableName="automation_rules"
            referencedColumnNames="id"
            constraintName="fk_automation_conditions_rule"
            onDelete="CASCADE"/>

        <!-- Create automation_actions table -->
        <createTable tableName="automation_actions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="action_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="action_config" type="TEXT"/>
            <column name="action_order" type="INTEGER" defaultValueNumeric="0"/>
        </createTable>

        <!-- Add foreign key -->
        <addForeignKeyConstraint
            baseTableName="automation_actions"
            baseColumnNames="rule_id"
            referencedTableName="automation_rules"
            referencedColumnNames="id"
            constraintName="fk_automation_actions_rule"
            onDelete="CASCADE"/>

        <!-- Create automation_else_actions table -->
        <createTable tableName="automation_else_actions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="action_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="action_config" type="TEXT"/>
            <column name="action_order" type="INTEGER" defaultValueNumeric="0"/>
        </createTable>

        <!-- Add foreign key -->
        <addForeignKeyConstraint
            baseTableName="automation_else_actions"
            baseColumnNames="rule_id"
            referencedTableName="automation_rules"
            referencedColumnNames="id"
            constraintName="fk_automation_else_actions_rule"
            onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
