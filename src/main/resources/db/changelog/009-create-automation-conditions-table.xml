<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="009-create-automation-conditions-table" author="marketing-automation">
        <createTable tableName="automation_conditions">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="condition_field" type="VARCHAR(100)"/>
            <column name="condition_operator" type="VARCHAR(50)"/>
            <column name="condition_value" type="VARCHAR(500)"/>
            <column name="condition_type" type="VARCHAR(50)"/>
        </createTable>
        
        <addForeignKeyConstraint
            baseTableName="automation_conditions"
            baseColumnNames="rule_id"
            constraintName="fk_automation_conditions_rule_id"
            referencedTableName="automation_rules"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
            
        <rollback>
            <dropTable tableName="automation_conditions"/>
        </rollback>
    </changeSet>

</databaseChangeLog>