<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-contacts" author="marketing-automation">
        <comment>Create contacts table for marketing automation</comment>

        <createTable tableName="contacts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Tenant for multi-tenancy -->
            <column name="tenant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Basic Information -->
            <column name="first_name" type="VARCHAR(100)"/>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(20)"/>

            <!-- Additional Information -->
            <column name="company" type="VARCHAR(255)"/>
            <column name="job_title" type="VARCHAR(100)"/>
            <column name="lead_score" type="INTEGER" defaultValueNumeric="0"/>
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE"/>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_activity" type="TIMESTAMP"/>
        </createTable>

        <!-- Add foreign key for tenant -->
        <addForeignKeyConstraint
            baseTableName="contacts"
            baseColumnNames="tenant_id"
            referencedTableName="organizations"
            referencedColumnNames="id"
            constraintName="fk_contacts_tenant"
            onDelete="CASCADE"/>

        <!-- Add unique constraint for email per tenant -->
        <addUniqueConstraint
            tableName="contacts"
            columnNames="tenant_id,email"
            constraintName="uk_contacts_tenant_email"/>

        <!-- Create contact_tags table for many-to-many relationship -->
        <createTable tableName="contact_tags">
            <column name="contact_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="tag_color" type="VARCHAR(20)"/>
            <column name="tag_description" type="VARCHAR(255)"/>
        </createTable>

        <!-- Add primary key for contact_tags -->
        <addPrimaryKey tableName="contact_tags" columnNames="contact_id,tag_name" constraintName="pk_contact_tags"/>

        <!-- Add foreign key for contact_tags -->
        <addForeignKeyConstraint
            baseTableName="contact_tags"
            baseColumnNames="contact_id"
            referencedTableName="contacts"
            referencedColumnNames="id"
            constraintName="fk_contact_tags_contact"
            onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
