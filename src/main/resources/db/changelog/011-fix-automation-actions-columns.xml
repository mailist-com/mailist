<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="011-fix-automation-actions-columns" author="marketing-automation">
        <comment>Add missing columns to automation_actions and automation_else_actions tables</comment>

        <!-- Add missing columns to automation_actions -->
        <addColumn tableName="automation_actions">
            <column name="action_value" type="VARCHAR(255)"/>
            <column name="action_delay_minutes" type="INTEGER"/>
            <column name="action_parameters" type="TEXT"/>
        </addColumn>

        <!-- Add missing columns to automation_else_actions -->
        <addColumn tableName="automation_else_actions">
            <column name="action_value" type="VARCHAR(255)"/>
            <column name="action_delay_minutes" type="INTEGER"/>
            <column name="action_parameters" type="TEXT"/>
        </addColumn>

    </changeSet>

</databaseChangeLog>
