<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-contact-list-contacts-table" author="marketing-automation">
        <createTable tableName="contact_list_contacts">
            <column name="list_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="contact_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="contact_list_contacts" columnNames="list_id,contact_id"/>
        
        <addForeignKeyConstraint
            baseTableName="contact_list_contacts"
            baseColumnNames="list_id"
            constraintName="fk_contact_list_contacts_list_id"
            referencedTableName="contact_lists"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
            
        <addForeignKeyConstraint
            baseTableName="contact_list_contacts"
            baseColumnNames="contact_id"
            constraintName="fk_contact_list_contacts_contact_id"
            referencedTableName="contacts"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
            
        <rollback>
            <dropTable tableName="contact_list_contacts"/>
        </rollback>
    </changeSet>

</databaseChangeLog>